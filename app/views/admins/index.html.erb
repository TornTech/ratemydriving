<div class="row">
  <div class="large-4 columns">
    <div class="companies-list-admin">
    <%= @text %>
      <% @companies.each_with_index do |company, i| %>
        <div class="companies-list-admin-rows <%= 'companies-list-admin-selected' if i == 0 %>" data-company-id="company<%= company.id %>" >
          <%= company.name %>
          <%= link_to("Edit", edit_company_path(company)) %>
          <%= link_to "Delete", company_path(company), :method => :delete, data: { confirm: "Are you sure?  You're about to delete this company..." } %>
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to("New company", new_company_path, :class => "button expand") %>
    </div>
  </div>
  <div class="large-8 columns">
    <div class="cars-list-admin ">
      <% @companies.each_with_index do |company, i| %>
        <div class="cars-list-admin-section company<%= company.id %> <%= 'hide' if i != 0 %>">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Make</th>
                <th>Model</th>
                <th>Color</th>
                <th>License Plate</th>
              </tr>
            </thead>
            <tbody>
              <% company.cars.each do |car| %>
                <tr>
                  <td><%= car.id %></td>
                  <td><%= car.code %></td>
                  <td><%= car.make %></td>
                  <td><%= car.model %></td>
                  <td><%= car.color %></td>
                  <td><%= car.license_plate %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
     
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to("New car", new_car_path, :class => "button button-car expand") %>
    </div>
  </div>
</div>




