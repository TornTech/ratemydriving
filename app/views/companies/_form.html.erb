<%= simple_form_for @company do |f| %>
  <%= f.input :name, :label => "Organization name" %>
  <%= f.input :contact_name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.button :submit %>
<% end %>

<% if @company.id %>
  <%= link_to "Delete", { :id => @company.id, :action => :destroy }, :method => :delete, data: { confirm: "Are you sure?  You're about to delete this company..." } %>
<% end %> 