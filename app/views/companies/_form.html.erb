<div class="companies-form-holder"> 
  <div class="row">
    <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns">
      <h1><%= title %></h1>

      <%= simple_form_for @company do |f| %>
        <%= f.input :name, :label => "Organization name" %>
        <%= f.input :contact_name %>
        <%= f.input :email %>
        <%= f.input :phone %>
        <div class="button-holder">
          <%= f.button :submit, :class => "button" %>
        </div>
      <% end %>

      <% if @company.id %>
        <%= link_to "Delete", { :id => @company.id, :action => :destroy }, :method => :delete, data: { confirm: "Are you sure?  You're about to delete this company..." } %>
      <% end %> 

    </div>
  </div>
</div>